<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgList"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/profile_1"

        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/txtRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/imgList"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15sp"

        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/imgList"
        app:layout_constraintTop_toBottomOf="@id/txtRole"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtTyf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="15sp"
        android:layout_marginStart="5dp"

        app:layout_constraintStart_toEndOf="@id/imgList"
        app:layout_constraintTop_toBottomOf="@id/txtCom"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>